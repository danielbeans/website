---
import RootLayout from "@/layouts/RootLayout.astro";

import Container from "@components/Container.astro";
import Blog from "@components/Blog.astro";
---

<RootLayout>
  <Container>
    <h1 class="animate font-bold text-6xl text-black dark:text-white">
      Hi, I'm Daniel
    </h1>
    <p class="animate text-2xl pt-4 pl-1">
      I'm a software engineer, creative, and learner.
    </p>
    <!-- Divider -->
    <span class="animate flex items-center py-8">
      <span class="h-px flex-1 bg-gray-300 dark:bg-gray-600"></span>
    </span>
    <!-- Blog -->
    <Blog />
  </Container>
</RootLayout>
